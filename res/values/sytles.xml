<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="PrimaryButton" parent="android:Widget.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFe2e2e2</item>
        <item name="android:background">@drawable/primary_button_bg_selector</item>
    </style>

    <!-- new post edit texts -->
    <style name="NewPostEditText" parent="android:Widget.Holo.Light.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>